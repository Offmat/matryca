  <body>
    <div class='table'>
      <table class='matrix-table' style='display: -webkit-inline-box'>
        <% 15.times do |i| %>
          <tr y='<%= i %>'>
            <% 21.times do |j| %>
              <td x='<%= j %>' class='cell' data-target="0,0,0"></td>
            <% end %>
          </tr>
        <% end %>
      </table>
      <span id="color-picker-container"></span>
    </div><br>
    <input id='name'>
    <br><br>
    <button class='export-data' id='save-data'>Save</button>
    <button class='export-data' id='show-data'>Show</button>
    <a href='/new'><button>New</button></a>
    <input type='file' name='image' accept='image/*'>
  </body>
</html>
<script src="/application.js" type="text/javascript"></script>
<script>
  new FrameForm().run();
  new UploadImage().call();
  <% if @frame %>
    new EditFrame(<%= @frame %>).call();
  <% end %>
</script>
